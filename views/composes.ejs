<%- include("partials/header"); -%>
  <form class="compose-form" action="/compose" method="post">
    <div class="form-group">
      <label for="title">Title*:</label>
      <input type="text" class="form-control" id="title" name="newItem" required autocomplete="off">
    </div>

    <div class="form-group">
      <label for="content">Content:</label>
      <textarea class="form-control" id="post" name="post" rows="10" required autocomplete="off"></textarea>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="author">Author:</label>
        <input type="text" class="form-control" id="author" name="author" required autocomplete="off">
      </div>

      <div class="form-group col-md-6">
        <label for="date">Date:</label>
        <input type="date" class="form-control" id="date" name="date">
      </div>
    </div>
    <div class="form-group">
      <label for="title">Image-url:</label>
      <input type="text" class="form-control" id="title" name="image" autocomplete="off">
    </div>



